<p id="notice"><%= notice %></p>

<div class="card">
  <div class="card-body">
    <h1>Editing Post</h1>

    <p>
      <strong>Title:</strong>
      <%= @post.title %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @post.description %>
    </p>

    <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-secondary" %> |
    <%= link_to 'Back', posts_path, class: "btn btn-primary" %>
  </div>
</div>